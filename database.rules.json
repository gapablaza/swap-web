{
  "rules": {
    "commentsCollection": {
      ".read": true,
      ".write": "auth != null"
    },

    "feedsHome": {
      ".indexOn": ["timestamp"],
      ".read": true,
      ".write": "auth != null"
    },

    "onlineUsers": {
      ".indexOn": ["status"],
      ".read": true,
      ".write": true
    },

    "unreadUserMessages": {
      ".read": "auth != null",
      ".write": "auth != null"
    },

    "userMessages": {
      ".read": "auth != null",
      ".write": "auth != null"
    },

    "userResume": {
      ".read": "auth != null",
      ".write": "auth != null",

      "$userRes": {
        ".indexOn": ["timestamp", "toUserId"]
      }
    },

    "users": {
      ".read": "auth != null",
      ".write": "auth != null"
    }
  }
}
